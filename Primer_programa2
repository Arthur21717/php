<?php

$centenari= array();

for($i=1;$i<=5;$i++) {
    
    $centenari[]=$i;
}


$pantalla="";

foreach($centenari as $valor) {
    
    if($valor%5==0){
        
        $pantalla=$pantalla."--->";
      
        
        
    }
    $pantalla=$pantalla.$valor;
    $pantalla= $pantalla."<br>";
    
}

echo $pantalla;
